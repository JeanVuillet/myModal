{
  "name": "mymodal3",
  "version": "9.0.0",
  "description": "A test NPM package for creating a modal component using React. Based on a tutorial from CRIL UniversitÃ© d'Artois.",
  "license": "MIT",
  "author": "jeanvuillet2",
  "keywords": [
    "modal",
    "react",
    "component",
    "npm",
    "tutorial"
  ],
  "files": [
    "dist",
    "dist/style.css",
    "README.md"
  ],
  "main": "./dist/my-modal.umd.js",
  "module": "./dist/my-modal.es.js",
  "exports": {
    ".": {
      "import": "./dist/my-modal.es.js",
      "require": "./dist/my-modal.umd.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^15.0.7",
    "@vitejs/plugin-react": "^4.3.0",
    "c8": "^9.1.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "jsdom": "^24.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "style-loader": "^4.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JeanVuillet/myModal.git"
  },
  "bugs": {
    "url": "https://github.com/JeanVuillet/myModal.git/issues"
  },
  "homepage": "https://github.com/JeanVuillet/myModal.git#readme",
  "dependencies": {
    "styled-components": "^6.1.11"
  }
}
